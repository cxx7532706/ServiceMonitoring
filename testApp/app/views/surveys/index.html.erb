<p id="notice"><%= notice %></p>

<h1>Listing Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reference number</th>
      <th>Version</th>
      <th>Enable flg</th>
      <th>Provider name</th>
      <th>Language avaliable</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.reference_number %></td>
        <td><%= survey.version %></td>
        <td><%= survey.enable_flg %></td>
        <td><%= survey.provider_name %></td>
        <td><%= survey.language_avaliable %></td>
        <td><%= survey.created_at %></td>
        <td><%= survey.updated_at %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

