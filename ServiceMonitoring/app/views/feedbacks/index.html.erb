<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h2>Listing Feedbacks</h2></div>
    <div class="panel-body">
    <!-- Table -->
    <table class="table">
      <thead>
        <tr>
          <th class="center">Reference number</th>
          <th class="center">Survey ID</th>
          <th class="center">Survey Name</th>
          <th class="center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <%if @feedbacks.empty?%>
          <tr>
          <td class="center" colspan="4">Sorry, there are no feedbacks yet, see the <%= link_to 'List of Surveys', surveys_path %> to initialize a new feedback!</td>
          </tr>
        <%else%>
          <% @feedbacks.each do |feedback| %>
            <tr>
              <td class="center"><%= feedback.reference_number %></td>
              <td class="center"><%= feedback.survey_id %></td>
              <td class="center"><%= Survey.find(feedback.survey_id).name %></td>
              <td class="center"><%= link_to 'Show Details', feedback %></td>
            </tr>
          <% end %>
        <%end%>
      </tbody>
    </table>
</div>
</div>
