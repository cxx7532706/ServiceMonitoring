<div class="col-md-offset-2 col-md-8 col-md-offset-2"%>
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h2>Submitted Feedback</h2></div>
    <div class="panel-body">
    <p>
      <strong>Client Reference Number:</strong>
      <%= @feedback.reference_number %>
    </p>

    <p>
      <strong>Survey:</strong>
      <%= @feedback.survey_id %>
    </p>

    <p>
      <strong>Feedback_ID:</strong>
      <%= @feedback.id %>
    </p>

    <% @questions.each do |question| %>
      <p>
        <strong>Question</strong>
        <%= question.title %>
        <strong>Answer</strong> 
        <% @answers.each do |answer| %>
        <% if answer.question_id == question.id %>
          <% if question.q_type == '1' %>
            <% question.question_options.each do |option| %>        
              <% if option.id == answer.content.to_i %>
                    <%= option.option %>
                <%end%>
            <%end%>
            <%end%>
            <%if question.q_type == '2' && answer.content != nil %>
              <% question.question_options.each do |option| %>        
                <% if option.id == answer.content.to_i %>
                    <%= option.option %>
                <%end%>
              <%end%>
            <%end%>
            <% if question.q_type == '3' %>
              <%= answer.content %>
            <%end%>
        <% end %>
        <% end %>

        </p>
     <% end -%>
  </div>
  </div>
<%= link_to 'Back to All Feedbacks', feedbacks_path %> |
<%= link_to 'Back to Surveys List', surveys_path %>
</div>
