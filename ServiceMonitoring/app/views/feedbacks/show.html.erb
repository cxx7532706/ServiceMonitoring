<p id="notice"><%= notice %></p>

<p>
  <strong>Reference number:</strong>
  <%= @feedback.reference_number %>
</p>

<p>
  <strong>Survey:</strong>
  <%= @feedback.survey_id %>
</p>

<p>
	<strong>Feedback_ID:</strong>
	<%= @feedback.id %>
</p>

<% @survey.questions.each do |question| %>
  <p>
    <strong>Question</strong>
    <%= question.title %>
    <% @answers.each do |answer| %>
    <% if answer.question_id == question.id %>
    	<strong>Answer</strong>
    	<% if question.q_type == 'choise' %>
    		<% question.question_options.each do |option| %>   			
	   			<% if option.id == answer.content.to_i %>
    	       		<%= option.option %>
    	    	<%end%>
    		<%end%>
    		<% elsif question.q_type == 'text'%>
    			<%= answer.content %>
    	<%end%>
    <% end %>
    <% end %>

    </p>
 <% end -%>




<%= link_to 'Edit', edit_feedback_path(@feedback) %> |
<%= link_to 'Back', feedbacks_path %>
