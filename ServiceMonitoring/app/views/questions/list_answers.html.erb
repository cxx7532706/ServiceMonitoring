<h1>Answers for <%= @question %></h1>

<table>
  <thead>
    <tr>
      <th>Answer ID</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @answers.nil? %>
      <tr>
        <td colspan = "5">NO ANSWERS YET</td>
      </tr>
    <% else %>
      <% @answers.each do |answer| %>
        <tr>
          <td><%= answer.survey_id %></td>
          <td><%= answer.content %></td>
          <td><%= link_to 'Show', answer %></td>
          <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
          <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to Questions', questions_path %>
